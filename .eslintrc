{
  "extends": "standard",
  "env": {
    "es2022": true,
    "node": true,
    "browser": true
  },
  "plugins": [
    "eslint-plugin-html"
  ],
  "globals": {
    "SELECT": true,
    "INSERT": true,
    "UPSERT": true,
    "UPDATE": true,
    "DELETE": true,
    "CREATE": true,
    "DROP": true,
    "CDL": true,
    "CQL": true,
    "CXL": true,
    "cds": true,
    "sap": true
  },
  "rules": {
    "no-console": "off",
    "require-atomic-updates": "off",
    "semi": [
      "error",
      "never"
    ],
    "quotes": [
      "error",
      "single"
    ]
  }
}