<mvc:View displayBlock="true"
  xmlns="sap.m"
  xmlns:f="sap.f"
  xmlns:tnt="sap.tnt"
  xmlns:mvc="sap.ui.core.mvc"
  controllerName="u4u.bpem.controller.App">

  <tnt:ToolPage>
    <tnt:header>
      <tnt:ToolHeader>
        <Title level="H1"
          text="BPEM Case Management">
          <layoutData>
            <OverflowToolbarLayoutData shrinkable="true" />
          </layoutData>
        </Title>
        <ToolbarSpacer/>
        <Avatar src="sap-icon://heatmap-chart"
          displaySize="XS"
          showBorder="true"
          press="onPress"/>
        <!-- <Avatar initials="MN" displaySize="XS">
          <layoutData>
            <OverflowToolbarLayoutData priority="NeverOverflow" />
          </layoutData>
        </Avatar> -->
      </tnt:ToolHeader>
    </tnt:header>

    <tnt:mainContents>
      <f:FlexibleColumnLayout id="app"
        stateChange="onStateChanged"
        backgroundDesign="Solid"
        layout="{/layout}" />
    </tnt:mainContents>
  </tnt:ToolPage>

</mvc:View>