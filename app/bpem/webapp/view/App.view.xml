<mvc:View displayBlock="true"
  height="100%"
  xmlns="sap.m"
  xmlns:f="sap.f"
  xmlns:tnt="sap.tnt"
  xmlns:mvc="sap.ui.core.mvc"
  controllerName="u4u.bpem.controller.App">

  <Page title="BPEM Case Management"
    class="sapUiResponsivePadding--header">
    <headerContent>
      <Avatar src="sap-icon://heatmap-chart"
        displaySize="XS"
        showBorder="true"
        press="onPress"/>
    </headerContent>

    <f:FlexibleColumnLayout id="app"
      stateChange="onStateChanged"
      backgroundDesign="Solid"
      layout="{/layout}" />
  </Page>

</mvc:View>